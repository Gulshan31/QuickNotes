<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.kinitoapps.quicknotes.MainDrawerActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowDx="3"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:text="@string/app_name"
            android:textColor="@color/bt_purple"
            android:textSize="32sp"
            android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gulshan"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="24dp"
        android:textSize="28sp"
        android:padding="8dp"
        android:id="@+id/user_name"
        />
    </LinearLayout>

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        >
        <TextView
            android:text="Science"
            android:textSize="24sp"
            android:layout_marginLeft="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:text="PHYSICS"
                android:layout_row="0"
                android:id="@+id/sub_phy"
                android:background="#259dff"
                android:layout_height="142dp"
                android:layout_width="142dp"
                android:layout_column="0"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:textSize="14dip" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:text="CHEMISTRY"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/sub_chem"
                android:background="#fc6f1e"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:layout_height="142dp"
                android:layout_width="142dp"
                android:textSize="14dip" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:text="BIOLOGY"
                android:layout_row="1"
                android:background="#ffe11f"
                android:layout_margin="12dp"
                android:layout_column="0"
                android:id="@+id/sub_bio"
                android:layout_height="142dp"
                android:textColor="@color/white"
                android:layout_width="142dp"
                android:textSize="14dip" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:text="NCERT EXEMPLAR"
                android:layout_row="1"
                android:layout_margin="12dp"
                android:background="#c423ff"
                android:layout_height="142dp"
                android:layout_width="142dp"
                android:id="@+id/ncert_exem"
                android:textColor="@color/white"
                android:layout_column="1"
                android:textSize="14dip" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </GridLayout>


    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        >
        <TextView
            android:text="Practical Section"
            android:textSize="24sp"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:text="PHYSICS"
                android:layout_row="0"
                android:background="#259dff"
                android:layout_height="142dp"
                android:layout_width="142dp"
                android:layout_column="0"
                android:id="@+id/pr_phy"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:textSize="14dip" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:text="CHEMISTRY"
                android:layout_row="0"
                android:layout_column="1"
                android:background="#fc6f1e"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:layout_height="142dp"
                android:id="@+id/pr_chem"
                android:layout_width="142dp"
                android:textSize="14dip" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:text="BIOLOGY"
                android:layout_row="1"
                android:background="#ffe11f"
                android:layout_margin="12dp"
                android:layout_column="0"
                android:id="@+id/pr_bio"
                android:layout_height="142dp"
                android:textColor="@color/white"
                android:layout_width="142dp"
                android:textSize="14dip" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:text="NCERT EXEMPLAR"
                android:layout_row="1"
                android:layout_margin="12dp"
                android:background="#c423ff"
                android:layout_height="142dp"
                android:layout_width="142dp"
                android:textColor="@color/white"
                android:layout_column="1"
                android:textSize="14dip" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </GridLayout>

</LinearLayout>
</ScrollView>